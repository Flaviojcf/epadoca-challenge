@model List<BakeryModel>

@{
    ViewData["Title"] = "Parceiros";
}

<!--  Bakery info Modal -->
<div id="modalBakeryInfo" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Descrição da padaria</h5>
                <button type="button" class="btn-close" data-dismiss="modal"  aria-label="Close">Sair</button>
            </div>
            <div class="modal-body">
               
                <div id="listBakery">

                </div>
            </div>
        </div>
    </div>
</div>
<!--/////////////////////////////////////////////////////////////////////-->





<div class="Container">


   


    <div class="containerTitle">
           @if (Model != null && Model.Any())
        {
            <h1 class="titleBakeryPage">Nossos parceiros</h1>
        } else
        {
           <h1 class="titleBakeryPage">Seja nosso primeiro parceiro</h1>
        }
      @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="closeAlert btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="closeAlert btn-danger btn-sm close-alert" arial-label="Close">X</button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>


    <div class="bakeryContainer">



        @if (Model != null && Model.Any())
        {
            foreach (BakeryModel bakery in Model)
            {
                <div class="cardComponent">
                    <h1>@bakery.Name</h1>
                    <p class="cardText">@bakery.Description</p>
                    <p class="infoCard" bakery-id="@bakery.Id"><strong>Ver mais informações</strong></p>
                    <a role="button" class="btn btn-primary" asp-route-id="@bakery.Id" asp-action="Edit" asp-controller="Bakery">Editar informação</a>
                    <a role="button" class="btn btn-danger" asp-route-id="@bakery.Id" asp-action="Delete" asp-controller="Bakery" >Cancelar Parceria</a>
                </div>

            }
        }
    </div>
    <div class="containerButton">
        <a class="btn btn-primary" asp-controller="Bakery" asp-action="Create">Seja parceiro</a>
    </div>



</div>